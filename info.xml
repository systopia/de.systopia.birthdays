<?xml version="1.0"?>
<extension key="de.systopia.birthdays" type="module">
  <file>birthdays</file>
  <name>Birthdays</name>
  <description>Provides tools to keep track of your contacts' birthdays, e.g. a report and automatic greetings via e-mail.</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>SYSTOPIA</author>
    <email>info@systopia.de</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/systopia/de.systopia.birthdays</url>
    <url desc="Documentation">https://github.com/systopia/de.systopia.birthdays</url>
    <url desc="Support">https://github.com/systopia/de.systopia.birthdays/issues</url>
    <url desc="Licensing">https://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2025-06-20</releaseDate>
  <version>1.6.0-beta1</version>
  <develStage>beta</develStage>
  <compatibility>
    <ver>5.45</ver>
  </compatibility>
  <comments>Provides a report on upcoming birthdays and an API for sending birthday greetings via e-mail.</comments>
  <civix>
    <namespace>CRM/Birthdays</namespace>
    <format>24.09.1</format>
  </civix>
  <mixins>
    <mixin>mgd-php@1.0.0</mixin>
    <mixin>menu-xml@1.0.0</mixin>
    <mixin>smarty-v2@1.0.3</mixin>
    <mixin>entity-types-php@2.0.0</mixin>
  </mixins>
  <classloader>
    <psr0 prefix="CRM_" path=""/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
</extension>
